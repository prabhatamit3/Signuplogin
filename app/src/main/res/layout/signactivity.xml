<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:onClick="Root_layout_in"
    tools:context=".Sign_log">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="371dp"
        android:layout_height="61dp"
        android:layout_marginBottom="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/instalogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="English(India)"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_first"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="354dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:width="360dp"
        android:height="26dp"
        android:background="@color/colorAccent"
        android:onClick="log_in"
        android:text="@string/log"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpass" />

    <EditText
        android:id="@+id/loginuser"
        android:layout_width="359dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:width="360dp"
        android:height="42dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:hint="  Phone number,email address or username"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textColorHint="#fff"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/loginpass"
        android:layout_width="358dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:width="360dp"
        android:height="42dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light"
        android:textColorHint="#fff"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginuser" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="305dp"
        android:layout_height="23dp"
        android:layout_marginTop="28dp"
        android:text="                                           or"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_first" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="154dp"
        android:layout_height="21dp"
        android:layout_marginBottom="184dp"
        android:text="Don't have an account?"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signup_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="186dp"
        android:text="Sign up"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>